/* 页面整体样式 */
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #fdf7ae;
}

.container {
  display: flex;
  flex-direction: column;
  padding: 20rpx;
  flex: 1; /* 占据剩余空间 */
}

/* 头部样式 */
.header {
  width: 90%;
  height: auto;
  background-color: #acd0ee;
  border-radius: 15rpx;
  padding: 20rpx;
  margin-bottom: 50rpx;
}

.he_text {
  font-size: 45rpx;
  color: #4a90e2;
  margin-bottom: 10rpx;
}

.weather-container {
  margin-top: 10rpx;
}

.weather-container text {
  font-size: 40rpx;
  color: #4a90e2;
}

/* 图片容器样式 */
.image-container {
  position: absolute; /* 设置为相对定位，用于子元素绝对定位 */
  width: 100%;
  text-align: center;
  margin-bottom: 10rpx;
  height: 500rpx; 
  display: inline-block; 
  box-sizing: border-box
}

.image-container image {
  width: 350px; /* 固定宽度 */
  height: 250px; /* 固定高度 */
  border-radius: 10rpx; /* 可选：添加圆角效果 */
}

/* 换一张按钮样式 */
.refresh-button {
  position: absolute; /* 绝对定位 */
  bottom: 20rpx; /* 距离图片底部 20rpx */
  right: 40rpx; /* 距离图片右侧 20rpx */
  background-color: rgba(0, 0, 0, 0.6); /* 半透明背景 */
  color: white; /* 文字颜色 */
  font-size: 30rpx; /* 字体大小 */
  padding: 10rpx 20rpx; /* 内边距 */
  border-radius: 50rpx; /* 圆角按钮 */
  border: none; /* 去掉默认边框 */
  z-index: 1; /* 确保按钮在图片上方 */
}

/* 习惯列表样式 */
.habit-list {
  border-radius: 16rpx;
  padding: 0 20rpx;
}

/* 添加删除按钮样式 */
.delete-btn {
  background-color: #ff4d4f;
  color: white;
  border: none;
  border-radius: 30rpx; /* 较大的圆角 */
  padding: 0 20rpx; /* 左右内边距减少 */
  height: 50rpx; /* 更矮的高度 */
  font-size: 24rpx;
  line-height: 50rpx; /* 确保文字垂直居中 */
  margin-left: 10rpx;
  flex-shrink: 0;
}

/* 习惯项样式 - 修改为垂直布局 */
.habit-item {
  display: flex;
  flex-direction: column;
  padding: 20rpx;
  border-bottom: 1rpx solid #EB82AE;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  background-color: #F2B9CE;
}

/* 顶部行样式 */
.habit-top-row {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

/* 底部行样式 */
.habit-bottom-row {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  margin-left: 60rpx;
}

/* 习惯名称样式 */
.habit-name {
  font-size: 35rpx;
  color: #4a90e2;
  flex: 1;
  margin: 0 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 其他信息项样式 */
.habit-status,
.habit-duration,
.habit-streak {
  font-size: 28rpx;
  color: #7f8c8d;
  margin-right: 20rpx;
}

/* 图标样式 */
.icon {
  width: 60rpx;
  height: 60rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.icon:active {
  transform: scale(0.95);
}

/* 添加习惯按钮样式 */
.add_habit {
  position: fixed; /* 固定定位 */
  bottom: 20px; /* 距离页面底部 20px */
  right: 20px; /* 距离页面右侧 20px */
  width: 100rpx; /* 按钮宽度 */
  height: 100rpx; /* 按钮高度 */
  border-radius: 50%; /* 圆形按钮 */
  background-color: #67C9C1; /* 背景颜色 */
  border: none; /* 去掉默认边框 */
  z-index: 999; /* 确保按钮在最上层 */
  opacity: 0.8;
}

.add_habit image{
  width: 70rpx;
  height: 70rpx;
  padding: 15rpx;
}

/* 已完成的习惯复选框变灰 */
checkbox[disabled] {
  opacity: 0.6;
}