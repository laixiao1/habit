.container {
  padding: 30rpx;
}

.form-item {
  margin-bottom: 40rpx;
}

.label {
  display: block;
  font-size: 32rpx;
  color: #333;
  margin-bottom: 15rpx;
}

input {
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
}

.picker {
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
  color: #333;
}

.icon-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  transition: all 0.3s;
}

.icon.selected {
  transform: scale(1.2);
  box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.2);
}

.submit-btn {
  margin-top: 60rpx;
  background-color: #67C9C1;
  color: white;
  border-radius: 50rpx;
  font-size: 32rpx;
}