page {
  background-color: #fdf7ae;
}

.container {
  padding: 20px;
  text-align: center;
}

.time-picker {
  margin: 20px 0;
}

.picker {
  padding: 10px;
  background: #f0f0f0;
  border-radius: 5px;
  display: inline-block;
}

.timer {
  font-size: 72px;
  font-weight: bold;
  margin: 30px 0;
  color: #FF5252;
}

.controls button {
  margin: 10px;
  width: 120px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.controls button i {
  margin-right: 5px;
}

.status {
  margin-top: 30px;
  color: #666;
  font-size: 16px;
}    