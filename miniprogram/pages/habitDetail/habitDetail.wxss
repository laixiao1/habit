page 
{
  background-color: #fdf7ae;
}
.container {
  padding: 20rpx;
}

.header {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
  padding: 10rpx;
  background-color: #acd0ee;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  text-align: center;
}

.habit-detail {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.detail-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 30rpx;
}

.detail-name {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 40rpx;
}

.detail-info {
  width: 100%;
}

.detail-info text {
  display: block;
  font-size: 30rpx;
  margin-bottom: 20rpx;
  padding: 20rpx;
  background-color: #f5f5f5;
  border-radius: 10rpx;
}