
.container {
  padding: 40rpx; /* 增加容器内边距 */
}

/* 加载状态样式 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 60vh;
}

.loading-image {
  width: 120rpx; /* 适当增大加载图标大小 */
  height: 120rpx;
  margin-bottom: 40rpx; /* 增加图标与文字间距 */
}

.loading-text {
  font-size: 36rpx; /* 增大文字大小 */
  color: #666;
}

/* 错误状态样式 */
.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 60vh;
  padding: 60rpx; /* 增加内边距 */
}

.error-text {
  color: #ff4d4f;
  font-size: 36rpx; /* 增大文字大小 */
  margin-bottom: 60rpx; /* 增加文字与按钮间距 */
  text-align: center;
}

.button-group {
  display: flex;
  gap: 40rpx; /* 增大按钮之间的间距 */
}

.custom-button {
  background-color: #07c160;
  color: white;
  border-radius: 50rpx;
  font-size: 32rpx; /* 增大文字大小 */
  padding: 0 60rpx; /* 增加按钮内边距 */
  height: 100rpx; /* 增大按钮高度 */
  line-height: 100rpx;
}

.custom-button.secondary {
  background-color: #f0f0f0;
  color: #333;
}

/* 习惯详情样式 */
.habit-detail {
  width: 80%;
  background-color: white;
  border-radius: 20rpx;
  padding: 60rpx; /* 增加内边距 */
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  margin: 40rpx; /* 增加外边距 */
}

.habit-header {
  display: flex;
  align-items: center;
  margin-bottom: 60rpx; /* 增加头部与内容间距 */
  position: relative;
}

.habit-icon {
  width: 140rpx; /* 增大图标大小 */
  height: 140rpx;
  margin-right: 40rpx; /* 增加图标与名称间距 */
  border-radius: 50%;
  background-color: #f5f5f5;
}

.habit-name {
  font-size: 40rpx; /* 增大名称文字大小 */
  font-weight: bold;
  color: #333;
  flex: 1;
}

.edit-button::after {
  border: none;
}

.habit-info {
  display: flex;
  flex-direction: column;
  gap: 40rpx; /* 增大信息项之间的间距 */
}

.info-item {
  display: flex;
  align-items: center;
}

.info-label {
  font-size: 32rpx; /* 增大标签文字大小 */
  color: #666;
  width: 200rpx; /* 适当增大标签宽度 */
}

.info-value {
  font-size: 32rpx; /* 增大值文字大小 */
  color: #333;
  font-weight: 500;
}

.action-buttons {
  display: flex;
  flex-direction: column;
  gap: 30rpx; /* 增大按钮之间的间距 */
  margin-top: 80rpx; /* 增加按钮与信息项间距 */
}

.complete-button {
  background-color: #07c160;
  color: white;
  border-radius: 50rpx;
  font-size: 36rpx; /* 增大文字大小 */
  height: 110rpx; /* 增大按钮高度 */
  line-height: 110rpx;
}

.complete-button[disabled] {
  background-color: #cccccc;
  color: #999999;
}

.delete-button {
  background-color: #ff4d4f;
  color: white;
  border-radius: 50rpx;
  font-size: 36rpx; /* 增大文字大小 */
  height: 110rpx; /* 增大按钮高度 */
  line-height: 110rpx;
}

/* 模态框样式 */
.modal-container {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 999;
  display: flex;
  justify-content: center;
  align-items: center;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
}

.modal-content {
  background-color: white;
  border-radius: 20rpx;
  width: 90%; /* 适当增大模态框宽度 */
  max-width: 800rpx;
  z-index: 1000;
  padding: 60rpx; /* 增加内边距 */
  box-sizing: border-box;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx; /* 增加头部与内容间距 */
}

.modal-title {
  font-size: 40rpx; /* 增大标题文字大小 */
  font-weight: bold;
  color: #333;
}

.modal-close {
  font-size: 48rpx; /* 增大关闭按钮文字大小 */
  color: #999;
}

/* 图标选择器样式 */
.icon-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  margin-bottom: 40rpx; /* 增加图标选择器与按钮间距 */
}

.icon-item {
  width: 140rpx; /* 增大图标项大小 */
  height: 140rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 30rpx; /* 增加图标项之间的间距 */
  border-radius: 50%;
  background-color: #f5f5f5;
}

.icon-item.selected {
  background-color: #e6f7ff;
  border: 2rpx solid #1890ff;
}

.icon-image {
  width: 100rpx; /* 增大图标大小 */
  height: 100rpx;
}

/* 表单样式 */
.form-item {
  margin-bottom: 40rpx; /* 增加表单项之间的间距 */
}

.form-label {
  display: block;
  font-size: 32rpx; /* 增大标签文字大小 */
  color: #666;
  margin-bottom: 15rpx; /* 增加标签与输入框间距 */
}

.form-input {
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding-left: 25rpx; /* 增加输入框内边距 */
  font-size: 32rpx; /* 增大输入框文字大小 */
  width: 100%;
  height: 100rpx;
  box-sizing: border-box;
}

.form-picker {
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 25rpx; /* 增加选择器内边距 */
  font-size: 32rpx; /* 增大选择器文字大小 */
  width: 100%;
  box-sizing: border-box;
}

.picker-content {
  color: #333;
}

.form-buttons {
  display: flex;
  justify-content: space-between;
  margin-top: 60rpx; /* 增加按钮与表单内容间距 */
}

.cancel-button {
  background-color: #f0f0f0;
  color: #333;
  border-radius: 50rpx;
  font-size: 36rpx; /* 增大文字大小 */
  height: 100rpx; /* 增大按钮高度 */
  line-height: 100rpx;
  width: 48%;
}

.confirm-button {
  background-color: #07c160;
  color: white;
  border-radius: 50rpx;
  font-size: 36rpx; /* 增大文字大小 */
  height: 100rpx; /* 增大按钮高度 */
  line-height: 100rpx;
  width: 48%;
}

.edit-button {
  background-color: #1890ff;
  color: white;
  border-radius: 50rpx;
  font-size: 32rpx;
  height: 90rpx;
  line-height: 90rpx;
}